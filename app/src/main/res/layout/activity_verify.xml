<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phone_Login"
    android:background="@drawable/kp">

    <TextView
        android:id="@+id/text_hospiton_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/OTP_text"
        android:layout_below="@+id/text_hospiton_verify"
        android:backgroundTint="#000000"
        android:textColor="#000000"
        android:hint="Enter OTP To Verify..."
        android:layout_marginTop="190dp"
        android:paddingTop="6dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="phone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:layout_below="@+id/OTP_text"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:padding="17dp"
        android:layout_marginTop="8dp"
        android:id="@+id/verify_button"/>

   <ProgressBar
       android:id="@+id/verify_progress_bar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       style="@style/ProgressBarStyle"
       android:layout_below="@+id/verify_button"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:visibility="invisible"
       />

</RelativeLayout>