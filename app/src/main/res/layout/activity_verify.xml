<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Phone_Login"
    android:background="@color/colorPrimary">

    <include
        layout="@layout/custom_toolbar"
        android:id="@+id/phone_verify_toolbar">
    </include>

    <TextView
        android:id="@+id/text_hospiton_verify"
        android:layout_width="wrap_content"
        android:layout_below="@+id/phone_verify_toolbar"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="54dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/OTP_text"
        android:layout_below="@+id/text_hospiton_verify"
        android:background="@drawable/edittext"
        android:textColor="#FFFFFF"
        android:hint="Enter OTP To Verify..."
        android:layout_marginTop="50dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:inputType="phone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:layout_below="@+id/OTP_text"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:padding="17dp"
        android:layout_marginTop="8dp"
        android:id="@+id/verify_button"/>

</RelativeLayout>